    <div style="padding-left: 25%; padding-top: 30%;">
        <h2 style="text-align: center; color: rgb(24, 90, 90);"> ADD BANNER </h2>
        <form action="/admin/addbanner" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="formGroupExampleInput">Add sub-heading</label>
                <input type="text" class="form-control" id="subheading" placeholder="sub heading" name="subHeading">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Add Main-heading</label>
                <input type="text" class="form-control" id="mainheading" placeholder="main heaading" name="mainHeading">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Add description </label>
                <input type="text" class="form-control" id="mainheading" placeholder="Description" name="description">
            </div>

            <label>Image upload</label>
            
            <div class="input-group col-xs-12">
                <input
                    class="form-control file-upload-info"
                    placeholder="Upload Image"
                    type="file"
                    accept="image/jpeg,image/gif,image/png,image/x-eps"
                    id="image"
                    name="image"
                    multiple
                />
                            </div>

                            <div class="form-group">
                                <label for="formGroupExampleInput2">url </label>
                                <input type="text" class="form-control" id="mainheading" placeholder="Description" name="url">
                            </div>

                            <div class="form-group">
                                <label for="formGroupExampleInput2">banner Type</label>
                                <input type="text" class="form-control" id="mainheading" placeholder="Description" name="bannerType">
                            </div>

                            <div>
                                <input type="submit" class="btn btn-success" value="submit"> :&nbsp; Add banner</input>
                            </div>
                        </form>

                        <div class="row">
                            <div style="padding: 10%;">
                                <a href="/admin/showbanners" class="btn btn-warning">show banners</a>
                            </div>
                        </div>
                    </div>

 </div>

