<%- include('partials/Header.ejs') %>
<div style="padding: 10%;">
    <h2 style="color: rgb(45, 78, 45);"><b>MONTHLY SALES REPORT</b></h2>
    <div style="padding: 10%;">
        <table class="table table-dark" style="width: 200%;">
            <a href="/admin/slaesreport" class="btn btn-warning">daily report</a><br><br>
            <a href="/admin/yearlyreport" class="btn btn-warning">yearly report</a><br><br>
            <thead>
                <tr>
                    <th scope="col">no of orders</th>
                    <th scope="col">products</th>
            <th scope="col">Total price</th>
            <th scope="col">month</th>
            <th scope="col">profit</th>
        </tr>
    </thead>
    <tbody >
        <% for(let sales of salesreport) { %>
            <tr>
                
                
                <td><%- sales.count %> </td>
                <td><%- sales.items %></td>
                <td><%= sales.ordertotal %></td>
                <td>
                    <div>
                        <%- sales._id.month %> 
                    </div>
                </td>
                <% let profit=Math.round((sales.ordertotal * 10)/100 )%>
                <td><%= profit %> </td>
            </tr>
            <% } %> 
        </tbody>
    </table>
</div>

</div>
<%- include('partials/Footer.ejs') %>