<%- include('partials/Header.ejs') -%>
<div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">CATEGORY LIST</h4>
        <p class="card-description">
          categories have yuva <code>list of categories</code>
        </p>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>
                  CATEGORY IMAGE
                <th>
                  CATEGORY NAME
                </th>
                <th>
                  DESCRIPTION
                </th>
                <th>
                 EDIT
                </th>
                <th>
                  DELETE
                </th>
              </tr>
            </thead>
            <tbody>
              <% for(let i=0;i<categorylist.length;i++) {%>
              <tr>
                <td class="py-1">
                  <img src="\admin\uploads\<%- categorylist[i].image[0].filename %>" alt="image"/>
                </td>
                <td>
                  <%- categorylist[i].categoryname %>
                </td>
                <td>
                  <!-- <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                  </div> -->
                  <%- categorylist[i].description %>
                </td>
                <td>
                 <a href="/admin/editcategory/<%- categorylist[i]._id %>"> <button type="button" class="btn btn-success">Edit</button> </a>
                </td>
                <td>
                  <a href="/admin/deletecategory/<%- categorylist[i]._id %>"><button type="button" class="btn btn-danger">Delete</button></a>
                </td>
              </tr>
              <% } %>
              
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  
         
<%- include('partials/Footer.ejs') -%>